<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

  <filter>
    <filter-name>FilterServlet</filter-name>
    <filter-class>webapp02.filter.FilterServlet</filter-class>
    <init-param>
      <param-name>serverDomain</param-name>
      <param-value>http://127.0.0.1:8080</param-value>
    </init-param>
    <init-param>
      <param-name>appDomain</param-name>
      <param-value>http://127.0.0.1:8082</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>FilterServlet</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <servlet>
    <servlet-name>MainServlet</servlet-name>
    <servlet-class>webapp02.servlet.MainServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>MainServlet</servlet-name>
    <url-pattern>/home</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>MainServlet</servlet-name>
    <url-pattern>/setCookie</url-pattern>
  </servlet-mapping>
</web-app>